{
  "compilerOptions": {
    /* Base */
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "verbatimModuleSyntax": true,

    /* Strictness */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,

    /* Bundler */
    "module": "preserve",
    "noEmit": true,

    /* No DOM: */
    "lib": ["es2023"],
  },
  "exclude": ["node_modules"]
}
